      #{couponCount,jdbcType=INTEGER}, #{couponUsedCount,jdbcType=INTEGER}, #{memberNo,jdbcType=VARCHAR}, 
      current timestamp, #{validityTimeEnd,jdbcType=TIMESTAMP}, 
